{
  "version": 2,
  "builds": [
    { "src": "client/**/*", "use": "@vercel/next" },
    { "src": "server/**/*", "use": "@vercel/node" }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "client/$1"
    }
  ],
  "functions": {
    "api/*": {
      "maxDuration": 5
    }
  }
}
